{
  "name": "Math for GitHub",
  "description": "Render LaTex in GitHub Issues",
  "version": "0.0.1",
  "permissions": [
    "activeTab",
    "https://github.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/issues/*"],
      "css": ["katex/katex.min.css"],
      "js": ["katex/katex.min.js", "content_script.js"]
    }
  ],
  "web_accessible_resources": [
    "katex/fonts/*"
  ],
  "browser_action": {
    "default_title": "Math for GitHub"
  },
  "content_security_policy": "font-src 'self'; script-src 'self'; object-src 'self'",
  "manifest_version": 2
}